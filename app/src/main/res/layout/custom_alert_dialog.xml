<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@color/light_gray"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:textSize="22sp"
                android:padding="6dp"
                android:text="@string/alert_dialog"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:padding="6dp"
                    android:layout_centerHorizontal="true"
                    android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_mauris_volutpat_dui_non_erat_bibendum_non_tempus_enim_dictum_praesent_a_nisl_venenatis_tincidunt_magna_id"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/alertDialogClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:layout_centerHorizontal="true">
            </androidx.appcompat.widget.AppCompatButton>

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>